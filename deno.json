{
  "tasks": {
    "dev": "deno run --watch --allow-all ./src/app.ts",
    "start": "deno run --allow-all ./src/app.ts",
    "test": "deno test --allow-all"
  },
  "imports": {
    "monero-ts": "npm:monero-ts@^0.11.3",
    "nunjucks": "npm:nunjucks@^3.2.4"
  },
  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  }
}
